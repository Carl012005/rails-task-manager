<h1><%= @task.title %></h1>
<p><%= @task.details %></p>
<input type="checkbox" name="task" <%= @task.completed ? 'checked' : '' %> disabled="true">
<label for="task"><%= @task.completed ? "This task is completed" : "This task is not completed yet" %></label><br>
<%= link_to("Back to list", tasks_path) %> <br>
<%= link_to("Edit task", edit_task_path) %>
